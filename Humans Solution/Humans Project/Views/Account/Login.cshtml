                        <hr />
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <br />
                        <div><img src="~/images/icon_bike.png" class="center-block roundImg" /></div>
                        <br />
                        <h3 class="orangeback whitetext">bike sports</h3>
                        <hr />
                        mountain
                        <hr />
                        bmx
                        <hr />
